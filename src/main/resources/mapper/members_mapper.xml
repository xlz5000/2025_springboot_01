<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.ict.edu01.members.mapper.MembersMapper">
    <select id="getLogin" resultType="MembersVO" parameterType="MembersVO">
        select * from members where m_id=#{m_id} and m_pw=#{m_pw}
    </select>
    <insert id="getRegister" parameterType="MembersVO">
       
        insert into members(m_id, m_pw, m_name, m_addr, m_addr2, m_email, m_phone) values
        (#{m_id}, #{m_pw}, #{m_name}, #{m_addr}, #{m_addr2} ,#{m_email}, #{m_phone})
    </insert>

    <select id="getmypage" resultType="MembersVO" parameterType="MembersVO">
        select * from members where m_idx=#{m_idx}
    </select>

    <select id="findUserById" resultType="MembersVO" parameterType="String">
        select * from members where m_id=#{m_id}
    </select>

</mapper>